.container {
    padding: 20px;
  }

  /* 筛选条件 */
.filter {
  display: flex;
  flex-direction: column; /* 改为纵向排列 */
  gap: 10px; /* 设置元素之间的间距 */
  margin-bottom: 20px;
}

.filter-input {
  border: 1px solid #ddd;
  padding: 10px;
  border-radius: 4px;
}

.filter-button {
  padding: 10px 20px;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 4px;
  text-align: center;
}
  
  .order-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .order-item {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    background-color: #f9f9f9;
  }
  
  .order-info {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .order-info text {
    font-size: 14px;
    color: #333;
  }

  .photo-list {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 10px;
  }

  .photo {
    width: 100px;
    height: 100px;
    border-radius: 8px;
  }
  
  .pagination {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    font-size: 14px;
    color: #666;
  }
  
  .loading, .no-more {
    text-align: center;
    margin-top: 20px;
    font-size: 14px;
    color: #666;
  }