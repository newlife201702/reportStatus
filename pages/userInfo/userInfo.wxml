<view class="container">
  <view class="header">
    <text class="title">用户信息</text>
  </view>
  
  <view class="form-group">
    <view class="form-item">
      <text class="label">姓名</text>
      <input class="input" type="text" placeholder="请输入姓名" value="{{name}}" data-field="name" bindinput="inputChange" />
    </view>
    
    <view class="form-item">
      <text class="label">角色</text>
      <input class="input" type="text" placeholder="请输入角色" value="{{role}}" data-field="role" bindinput="inputChange" />
    </view>
    
    <view class="form-item">
      <text class="label">部门</text>
      <input class="input" type="text" placeholder="请输入部门" value="{{department}}" data-field="department" bindinput="inputChange" />
    </view>
  </view>
  
  <view class="button-container">
    <button class="submit-button" type="primary" bindtap="submitForm">提交</button>
  </view>
</view> 