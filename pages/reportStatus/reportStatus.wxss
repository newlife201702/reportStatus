.container {
    padding: 20px;
  }
  
  .form-item {
    margin-bottom: 20px;
  }
  
  .label {
    font-weight: bold;
    margin-right: 10px;
  }
  
  .picker {
    border: 1px solid #ddd;
    padding: 10px;
    border-radius: 4px;
  }
  
  .photo {
    width: 100%;
    height: 150px;
    margin-top: 10px;
    border-radius: 8px;
  }

  /* 复选框样式 */
  checkbox {
    margin-right: 8px;
  }

  checkbox .wx-checkbox-input {
    width: 34rpx;
    height: 34rpx;
    border-radius: 4rpx;
  }

  checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #1aad19;
    border-color: #1aad19;
  }

  /* 重新开始复选框容器 */
  .restart-checkbox-container {
    display: flex;
    align-items: center;
    background-color: #f8f8f8;
    padding: 12rpx;
    border-radius: 8rpx;
  }

  .restart-checkbox-container label {
    display: flex;
    align-items: center;
    width: 100%;
  }